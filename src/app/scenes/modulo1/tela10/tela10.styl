.tela.mod1tela10
  position relative
  min-height 100%
  width auto
  min-width 100%
  height 100% /* cross-browser */
  background url('../assets/images/p1/desktop/bgs/bg_10.png')
  //background-attachment fixed
  background-position center
  background-repeat no-repeat
  background-size cover
  overflow-x auto
  overflow-y hidden

  .fw-5
    width 5vw
  .fw-35
    width 35vw
  .fw-36
    width 35vw
  .fw-30
    width 30vw
  .fw-40
    width 40vw
  .fw-14
    width 14vw

  .container-fluid
    height 100%
    padding 0

    .no-wrap
      overflow-x auto
      overflow-y hidden
      white-space nowrap
      min-height 100vh
      min-height calc(100 * var(--vh))

      .normal-wrap
        white-space normal

      .table
        display table
        min-height 100vh
        min-height calc(100 * var(--vh) - 20px)
        margin 0

        .table-cell
          display table-cell
          vertical-align middle

    .menu-item
      display block
      margin-bottom 0.5rem

      .menu-number
        display inline-block
        vertical-align middle
        width 3rem
        height 3rem
        border-radius 50%
        background #91c73e

        p
          text-align center
          line-height 3rem
          font-size 2rem
          font-weight bold
          color white

      .menu-text
        display inline-table
        vertical-align middle
        width calc(100% - 5rem)
        margin-left 0.6rem
        min-height 3rem
        border-radius 1.5rem
        background #91c73e

        p
          display table-cell
          vertical-align middle
          text-align left
          font-size 1rem
          color white
          padding 0 1.5rem

    .h-50
      display table
      min-height 18rem
      padding 0 3rem

      .table-cell
        display table-cell
        vertical-align middle

        img
          max-height 13rem

    .slick-container

      ul.slick-dots
        margin-top 5px

        li

          &:after
            border 3px solid #007b95
            background transparent

          &.visited
            &:after
              background rgba(142,237,59,1)
              border 3px solid #007b95

          &.slick-active

            &:after
              border 3px solid #007b95
              background #007b95

