.tela.mod1tela8
  position relative
  min-height 100%
  width 100%
  height 100% /* cross-browser */
  background url('../assets/images/p1/desktop/bgs/bg_07.png')
  //background-attachment fixed
  background-position center
  background-repeat no-repeat
  background-size cover
  transition background 0.7s

  .container-fluid
    height 100%
    padding 0 5rem

    .row
      height 100%

    .pre-pira
      margin-bottom 2rem

    .pira
      font-size 3rem
      font-weight bold
      display inline-block
      vertical-align middle
      color #83c351
      margin-right 0.4rem

      &.pira-1
        color #83c351

      &.pira-2
        color #21b67c




@media screen and (orientation: portrait)
  .tela.mod1tela8
    background url('../assets/images/p1/desktop/bgs/bg_07.png')
    //background-attachment fixed
    background-position top center
    background-repeat no-repeat
    background-size cover

