.tela.loading
  position absolute
  left 0px
  top 0px
  width 100%
  height 100%
  padding-left 0 !important
  background url('../assets/images/default/loading/Einstein.png')
  background-color white
  background-repeat no-repeat
  background-position center
  background-size auto 24vh
  overflow hidden

  .tela-content
    position relative

    .btn
      position absolute
      left 850px//305px
      top 980px

  .loader-content
    position absolute
    left 0px
    top 0px
    width 100%
    height 100%
    //background rgba(0,0,0,0.8)
    //background url('../assets/images/default/loading/loading_0002.png')


    &.ng-hide-add
      animation 0.2s fadeOut
    &.ng-hide-remove
      animation 0.2s fadeIn

    .radialprogress
      position absolute
      left 50%
      top 50%
      transform translateX(-50%) translateY(-50% + 3rem)

    .images
      position absolute
      left 0px
      top 0px

      img
        position absolute
        left 0px
        top 0px

    .progress-number
      position absolute
      width 100%
      left 0px
      bottom 50px
      text-align center
      color #000
      font-size 20px
      font-weight 300
      line-height 40px

      .big
        font-size 40px
        font-weight 500

        .red
          //font-weight bold
          color #000

    .loaded-message
      position absolute
      left 0px
      top 0px

      .bra-btn
        position absolute
        left 420px
        top 675px

    .progresss
      position absolute
      left 0px
      top 765px
      width 1170px
      height 3px
      background #000

      .progress-bar
        position absolute
        left 0px
        top -1px
        height 5px
        background red
        transition 0.5s width



