.tela.menu
  position relative
  min-height 100%
  width 100%
  height auto /* cross-browser */
  min-height calc(100 * var(--vh))
  background white
  padding 2rem 0
  overflow-x hidden

  .b1
    color #10ab97
  .b2
    color #36cbd4
  .b3
    color #045f9a
  .b4
    color #00a5e4

  ul
