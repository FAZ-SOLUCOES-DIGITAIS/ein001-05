  .timeline
    position relative

    .timeline-btn
      display block
      position relative
      text-align center
      padding-top 5rem

      &:before
        content ""
        position absolute
        left 50%
        top 0rem
        width 3px
        height 5rem
        background #7c9474
        transform translateX(-50%)

      &.last
        padding-bottom 5rem
        &:after
          content ""
          position absolute
          left 50%
          bottom 0
          width 3px
          height 5rem
          background #7c9474
          transform translateX(-50%)

      &.last2
        padding-bottom 2rem
        &:after
          content ""
          position absolute
          left 50%
          bottom 0
          width 3px
          height 2rem
          background #7c9474
          transform translateX(-50%)

      .timeline-btn-inside
        position relative
        display inline-block
        padding 1rem 2rem
        border-radius 1.5rem
        font-weight bold
        color white
        background #7c9474
        z-index 20

      .timeline-item
        position absolute
        width 12rem
        height auto
        top 6.5rem
        transform translateY(-50%)
        z-index 10

        p
          background white
          color black
          border-radius 1.5rem
          padding 1rem
          box-shadow 0 0 15px 1px rgba(0,0,0,0.2)
          text-align left

          &.bg-green
            background #7c9474
            color white

        &.timeline-left
          right calc(50% + 6rem)

          &:before
            content ""
            position absolute
            left 100%
            top 50%
            width 6rem
            height 3px
            background #7c9474
            transform translateY(-50%)
            z-index 9

        &.timeline-right
          left calc(50% + 6rem)

          &:before
            content ""
            position absolute
            left -6rem
            top 50%
            width 6rem
            height 3px
            background #7c9474
            transform translateY(-50%)
            z-index 9

      &.bigger
        padding-top 8rem

        &:before
          height 8rem

        .timeline-item
          top 9.5rem

