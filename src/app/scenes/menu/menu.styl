.tela.menu
  position relative
  min-height 100%
  width 100%
  height auto /* cross-browser */
  min-height calc(100 * var(--vh))
  background white
  padding 2rem 0

  .bg-1
    background url('../assets/images/bgs/bg_01_p_01.png')
    //background-attachment fixed
    background-position center
    background-repeat no-repeat
    background-size cover

  .bg-woman
    &:after
      content ""
      position absolute
      width 45%
      height 100%
      left 45%
      top 0
      background url('../assets/images/imagens/imagem_01.png')
      //background-attachment fixed
      background-position bottom center
      background-repeat no-repeat
      background-size auto 80%

  .bg-2
    background url('../assets/images/bgs/bg_02.png')
    //background-attachment fixed
    background-position center
    background-repeat no-repeat
    background-size contain

  .screen.screen-2
    position relative

  .bg-3
    position absolute
    right 0
    top -10%
    width 40%
    height 120%
    background url('../assets/images/bgs/bg_retangulo_azul_01.png')
    //background-attachment fixed
    background-position right center
    background-repeat no-repeat
    background-size auto 100%

    &:before
      content ""
      position absolute
      width 100%
      height 100%
      right 0
      top 0
      background url('../assets/images/bgs/poa_azul_03.png')
      //background-attachment fixed
      background-position right center
      background-repeat no-repeat
      background-size auto 80%

    &:after
      content ""
      position absolute
      width 100%
      height 100%
      right 0
      top 0
      background url('../assets/images/imagens/imagem_02.png')
      //background-attachment fixed
      background-position right center
      background-repeat no-repeat
      background-size auto 60%


/* Small devices (tablets, 768px and up) */
@media screen and (orientation:portrait)
  .tela.menu
    position relative

