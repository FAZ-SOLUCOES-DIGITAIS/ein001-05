    li
      margin-bottom 0.1rem

  .first-boxes
    min-height 18rem

  .bg-1
    background url('../assets/images/bgs/bg_01_p_01.png')
    //background-attachment fixed
    background-position center
    background-repeat no-repeat
    background-size cover

  .bg-woman
