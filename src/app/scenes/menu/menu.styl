      &:before
        content ""
        position absolute
        width 100%
        height 100%
        right 0
        top 0
        background url('../assets/images/bgs/poa_azul_03.png')
        //background-attachment fixed
        background-position right center
        background-repeat no-repeat
        background-size auto 80%

      &:after
        content ""
        position absolute
        width 100%
        height 100%
        right 0
        top 0
        background url('../assets/images/imagens/imagem_02.png')
        //background-attachment fixed
        background-position right center
        background-repeat no-repeat
        background-size auto 60%

    .screen.screen-2
      position relative
      &:before
        display none

    .screen.screen-4
      position relative
      //background #f8f8f8
      z-index 10

      &:before
        display none

      &:after
        display none

    .screen.screen-5, .screen.screen-10, .screen.screen-22
      position relative
      z-index 9

      &:before
        content ""
        position absolute
        left -15px
        top -25%
        width calc(100% + 30px)
